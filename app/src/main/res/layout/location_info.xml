<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.autohush.www.dah.LocationInfo">

<android.support.design.widget.CoordinatorLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:label="AutoHush"
    android:id="@+id/view">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:label="AutoHush"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:label="AutoHush"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"/>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>

    <Spinner xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_gravity="start|center_horizontal"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/del"
        android:layout_alignEnd="@+id/ok">
    </Spinner>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:src="@drawable/current"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:id="@+id/cur"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set Location :"
        android:id="@+id/textView4"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/title"
        android:layout_toStartOf="@+id/cur" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AutoHush :"
        android:textColor="@color/textColorPrimary"
        android:textSize="25sp"
        android:id="@+id/textView5"
        android:layout_marginStart="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/add"
        android:src="@drawable/add"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/cur"
        android:layout_alignStart="@+id/ok" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose Profile :"
        android:id="@+id/textView6"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/cur"
        android:layout_alignStart="@+id/textView4" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:id="@+id/del"
        android:src="@drawable/del"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/spinner"
        android:layout_alignStart="@+id/cur" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ok"
        android:src="@drawable/ok"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginEnd="31dp"
        android:layout_alignTop="@+id/del"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/title"
        android:text="H"
        android:textColor="@color/textColorPrimary"
        android:layout_alignBottom="@+id/view"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>